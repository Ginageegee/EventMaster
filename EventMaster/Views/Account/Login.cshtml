@{
    ViewData["Title"] = "Login";
}

<h2 class="mb-3">Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-controller="Account" asp-action="Login" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="email" class="form-control" autocomplete="email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" autocomplete="current-password" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>