@model IReadOnlyList<EventMaster.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<h2 class="mb-3">Upcoming Events</h2>

@if (Model.Count == 0)
{
    <p class="text-muted">No events yet.</p>
}
else
{
    <div class="row g-3">
        @foreach (var ev in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@ev.EventName</h5>
                        <div class="text-muted small mb-2">
                            @ev.EventDate.ToString("yyyy-MM-dd") @ev.EventTime.ToString("HH:mm")
                        </div>
                        <p class="card-text">@ev.EventDescription</p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@ev.EventId">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}